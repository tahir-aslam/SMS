                            <Border Grid.Column="1"
                                    BorderThickness="0,1,1,1"
                                    BorderBrush="Gray"
                                    Background="LightBlue">
                                <StackPanel>
                                    <TextBlock Text="Package"
                                               Height="30"
                                               FontSize="16"
                                               HorizontalAlignment="Center" />
                                    <ComboBox  Name="package_cmb"
                                               Width="120"
                                               SelectedValuePath="id"
                                               SelectedIndex="0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding id}"
                                                               HorizontalAlignment="Left"
                                                               FontSize="10"
                                                               Foreground="White"
                                                               VerticalAlignment="Center"
                                                               Visibility="Collapsed"></TextBlock>
                                                    <TextBlock Text="{Binding package_name}"
                                                               HorizontalAlignment="Right"
                                                               FontSize="12"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <CheckBox Content="Generate Fee"
                                              Name="generate_CB"
                                              HorizontalAlignment="Center"
                                              Margin="0,50,0,0"
                                              Unchecked="generate_CB_Unchecked"
                                              Checked="generate_CB_Checked" />
                                    <Label Content="Month"
                                           Visibility="Collapsed"
                                           Name="month_Lbl"
                                           Height="30"
                                           HorizontalAlignment="Center" />
                                    <ComboBox Width="110"
                                              Visibility="Collapsed"
                                              Name="month_cmb"
                                              SelectedValuePath="id">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding id}"
                                                               HorizontalAlignment="Left"
                                                               FontSize="10"
                                                               Foreground="White"
                                                               VerticalAlignment="Center"
                                                               Visibility="Collapsed"></TextBlock>
                                                    <TextBlock Text="{Binding month_name}"
                                                               HorizontalAlignment="Right"
                                                               FontSize="12"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>


