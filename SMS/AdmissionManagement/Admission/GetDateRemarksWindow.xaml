<Window x:Class="SMS.AdmissionManagement.Admission.GetDateRemarksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GetDateRemarksWindow" MaxHeight="395" MaxWidth="350"  WindowStyle="ToolWindow"  WindowStartupLocation="CenterScreen">
    <Grid Background="WhiteSmoke">
        <GroupBox Header="Student Withdrawal " Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="20">
                <GroupBox Header="Withdrawal Date">
                <DatePicker Name="date_textbox" Width="200" Height="35" FontSize="20"/>
                </GroupBox>
                <GroupBox Header="Remarks">
                    <TextBox Height="70" TextWrapping="Wrap" Name="remarks_tb"/>
                </GroupBox>
                <Button Content="Withdrawal Admission" Name="withdraw_btn" Width="150" Margin="0,5,0,0" Click="withdraw_btn_Click" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
