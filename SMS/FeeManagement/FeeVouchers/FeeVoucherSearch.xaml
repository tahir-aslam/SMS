                                                        <Label Grid.Column="0" Grid.Row="4"  Style="{StaticResource ExceptionCellStyle}">4</Label>
                                                        <Label Grid.Column="1" Grid.Row="4"  Style="{StaticResource ExceptionCellStyle}">Exam Fee</Label>
                                                        <TextBox Grid.Column="2" Background="Transparent" Grid.Row="4" BorderThickness="1 0 0 0" Text="{Binding rem_exam_fee}"  BorderBrush="Black"  FontSize="14" />

                                                        <Label Grid.Column="0" Grid.Row="5" Style="{StaticResource ExceptionCellStyle}" >5</Label>
                                                        <Label Grid.Column="1" Grid.Row="5" Style="{StaticResource ExceptionCellStyle}" >Security Fee</Label>
                                                        <TextBox Grid.Column="2" Background="Transparent" Grid.Row="5 " BorderThickness="1 0 0 0" Text="{Binding rem_security_fee}"  BorderBrush="Black" FontSize="14" />

                                                        <Label Grid.Column="0" Grid.Row="6" Style="{StaticResource ExceptionCellStyle}" >6</Label>
                                                        <Label Grid.Column="1" Grid.Row="6" Content="{Binding fine_desc}"  Style="{StaticResource ExceptionCellStyle}"></Label>
                                                        <TextBox Grid.Column="2" Background="Transparent" Grid.Row="6" BorderThickness="1 0 0 0" Text="{Binding fine_amount}"  BorderBrush="Black" FontSize="14" />

                                                        <Label Grid.Column="0" Grid.Row="7"  Style="{StaticResource ExceptionCellStyle}">7</Label>
                                                    <Label Grid.Column="1" Grid.Row="7"  Style="{StaticResource ExceptionCellStyle}" Content="{Binding other_desc}"></Label>
                                                        <TextBox Grid.Column="2" Background="Transparent" Grid.Row="7" BorderThickness="1 0 0 0" Text="{Binding other_amount}"  BorderBrush="Black"   FontSize="14" />

                                                        <Label Grid.Column="0" Grid.Row="8"  BorderThickness="1,1,0,1" Style="{StaticResource ExceptionCellStyle}">8</Label>
                                                        <Label Grid.Column="1" Grid.Row="8" BorderThickness="1,1,0,1" Content="{Binding pending_desc}"  Style="{StaticResource ExceptionCellStyle}"></Label>
                                                        <TextBox Grid.Column="2" Background="Transparent" Grid.Row="8" BorderThickness="1 1 0 0" Text="{Binding pending_amount}"  BorderBrush="Black"   FontSize="14" />

                                                        <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="3" Visibility="Hidden" >
                                                            <Image  Stretch="None" Source="/SMS;component/images/paid_image.jpg" Opacity="0.33" Focusable="True" ></Image>
                                                        </Grid>

                                                    </Grid>
                                                    <Grid Grid.Row="8" VerticalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="130"/>
                                                            <ColumnDefinition Width="130"/>
                                                            <ColumnDefinition Width="120"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Label Grid.Column="0" Content="Amount In Words: " HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                        <Label Grid.Column="1" Content="Total: " HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="2" Width="125" Height="35" HorizontalAlignment="Left" TextAlignment="Left"   FontSize="20" FontWeight="Black" Text="{Binding total}"  VerticalAlignment="Center" TextDecorations="Underline" />
                                                        <Label Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Width="30" Content="Rs"/>

                                                    </Grid>

                                                    <Grid Grid.Row="9">
                                                        <TextBlock Text="{Binding total_in_words}" VerticalAlignment="Center" HorizontalAlignment="Left"  TextDecorations="Underline" />
                                                    </Grid>

                                                    <Grid Grid.Row="10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="230"/>
                                                            <ColumnDefinition Width="140"/>

                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Signature  " VerticalAlignment="Center" HorizontalAlignment="Right" />
                                                        <TextBlock Grid.Column="1" Width="140" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="______________________________"/>

                                                    </Grid>

                                                </Grid>
                                            </Border>
                                            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

                                            </Grid>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                   
                </ScrollViewer>
            </Grid>     
           
       
            <Grid Grid.Row="1" Margin="1,0,1,1" Name="voucher2_grid" Visibility="Hidden">                
