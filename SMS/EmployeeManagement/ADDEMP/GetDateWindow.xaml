<Window x:Class="SMS.EmployeeManagement.ADDEMP.GetDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GetDateWindow" MaxHeight="195" MaxWidth="290"  WindowStyle="ToolWindow"  WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="Employee Leaving Date" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="20">
                <DatePicker Name="date_textbox" Width="200" Height="35" FontSize="20"/>
                <Button Content="Withdraw" Name="withdraw_btn" Width="100" Margin="0,5,0,0" Click="withdraw_btn_Click" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
