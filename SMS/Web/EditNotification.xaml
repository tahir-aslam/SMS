<Window x:Class="SMS.Web.EditNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification Manager" Height="340" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" BorderThickness="5" BorderBrush="LightGray"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="230"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label HorizontalAlignment="Left" Content="Notification Manager" FontSize="14" Foreground="Gray"  FontWeight="Black"/>
            <Button  Content="Close" HorizontalAlignment="Right" Width="60" Background="Red" Foreground="White" Click="Button_Click" />
        </Grid>

        <TextBox Grid.Row="1" Name="notification_textbox"  Margin="10" TextWrapping="Wrap"  />
        
        <Button Grid.Row="2" Content="Update" Width="200" Click="Button_Click_1" />
    </Grid>
</Window>
