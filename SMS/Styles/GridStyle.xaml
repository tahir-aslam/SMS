<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SMS.Styles">
    <Style x:Key="BackgroundColor"
           TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush>
                    <GradientStop Color="#FFEAEAEA"
                                  Offset="1" />
                    <GradientStop Color="White"
                                  Offset="0.168" />
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!--========================================== Add Controller Style ==========================================-->

    <Style x:Key="addControllerGrdBg"
           TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1"
                                     StartPoint="0,1">
                    <GradientStop Color="#FFF2F2F2"
                                  Offset="0.663" />
                    <GradientStop Color="White"
                                  Offset="0.1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>


    <!--========================================== Sub menu Style ==========================================-->
    <Style x:Key="subMenuGrid"
           TargetType="Grid">
        <Setter Property="Width"
                Value="150" />
        <Setter Property="Height"
                Value="130" />
    </Style>


