    <!--========================================== VMS Grid Style ==========================================-->


    <Style x:Key="grdLeftMenu"
           TargetType="Grid">
        <Setter Property="Grid.Row"
                Value="0" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1"
                                     StartPoint="0,0">
                    <GradientStop Color="#FFC1BFC0"
                                  Offset="0.605" />
                    <GradientStop Color="#FFE1E1E1"
                                  Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>



    <Style x:Key="grdLeftMenuBG"
           TargetType="Grid">
        <Setter Property="Width"
                Value="280" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,0.5"
                                     StartPoint="0,0.5">
                    <GradientStop Color="#FFE6E6E6" />
                    <GradientStop Color="#FFFEFEFE"
                                  Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10"
                                  Color="#877b77"
                                  Opacity=".2"
                                  ShadowDepth="8"
                                  Direction="-1" />
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>