    <!--======================== Splach Rectangle ==================================-->
    <Style x:Key="recSplachScreen"
           TargetType="Rectangle">
        <Setter Property="Stroke"
                Value="#0C000000" />
        <Setter Property="StrokeThickness"
                Value="0" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="5"
                                  Opacity="0.75" />
            </Setter.Value>
        </Setter>
    </Style>

