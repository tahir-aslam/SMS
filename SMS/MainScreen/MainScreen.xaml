                            BorderBrush="Black">
                        <Image  Source="/SMS;component/images/download1.png" />
                    </Button>
                    <Button Grid.Column="7"
                            HorizontalAlignment="Left"
                            Name="setting_btn"
                            ToolTip="Scenario Admin Panel"
                            Width="50"
                            Height="50"
                            Background="Black"
                            BorderBrush="Black"
                            Click="setting_btn_Click">
                        <Image  Source="/SMS;component/images/setting.png" />
                    </Button>
                    <Button Grid.Column="8"
                            HorizontalAlignment="Left"
                            ToolTip="Logout"
                            Width="50"
                            Height="50"
                            Background="Black"
                            BorderBrush="Black"
                            Name="logout_btn"
                            Click="logout_btn_Click">
                        <Image  Source="/SMS;component/images/logout.png"
