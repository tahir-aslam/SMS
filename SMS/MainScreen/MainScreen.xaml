                                    Cursor="Hand"
                                    Margin="40,0,0,0"
                                    Click="btnMin_Click">
                                <materialDesign:PackIcon Kind="WindowMinimize"
                                                         Width="18"
                                                         Height="14"
                                                         Foreground="#FF444444" />
                                <!--<Image Source="/Img/MainWinImg/ico_min.png" Stretch="Uniform"/>-->
                            </Button>
                            <Button x:Name="btnMax"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Padding="0"
                                    Cursor="Hand"
                                    Margin="12,0,0,0"
                                    Click="btnMax_Click">
                                <Image x:Name="icoMaximize"
                                       Source="/images/MainWinImg/ico_max_half.png"
                                       Stretch="Uniform"
                                       Width="20"
                                       Height="20" />
                            </Button>

                            <Button x:Name="ButtonFechar"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Cursor="Hand"
                                    Padding="0"
                                    Margin="12,0,10,0"
                                    Click="ButtonFechar_Click">
                                <!--<Image Source="/Img/MainWinImg/ico_close.png" Stretch="Uniform" Width="20" Height="20"/>-->
                                <materialDesign:PackIcon Kind="Close"
                                                         Width="17"
                                                         Height="17"
                                                         Foreground="#FF444444" />

                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <Border Background="White"
                        Grid.RowSpan="2"
                        Grid.Row="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFAEAEAE"
                                          Direction="320"
                                          BlurRadius="7.5"
                                          ShadowDepth="7"
                                          Opacity="0.5"
                                          RenderingBias="Quality" />
                    </Border.Effect>
                    <Grid x:Name="grdContent">
                        <StackPanel  HorizontalAlignment="Center"
                                     VerticalAlignment="Top">
                            <ListView x:Name="ListViewMenu"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      Cursor="Hand"
                                      FontSize="10"
                                      Tag="Language"
                                      Foreground="#FF777777"
                                      FontFamily="Open Sans Light"
                                      SelectionChanged="ListViewMenu_SelectionChanged">
                                <ListViewItem Cursor="Hand"
                                              Height="55">
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="/Images/MainWinImg/icon_home.png"
                                               Name="iconHome"
                                               Style="{DynamicResource imgListMenu}" />
                                        <TextBlock Text="Home"
                                                   Tag="Language"
                                                   Name="txtHome" />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem  Cursor="Hand"
                                               Height="55">
                                    <StackPanel VerticalAlignment="Stretch">
                                        <Image Source="/Images/MainWinImg/icon_settings.png"
                                               Name="iconSetting"
                                               Style="{DynamicResource imgListMenu}" />
                                        <TextBlock Margin="0"
                                                   Text="Student"
                                                   Name="txtSettings"
                                                   Tag="Language"
                                                   />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Cursor="Hand"
                                              Height="55"
                                              x:Name="lisCardHolder">
                                    <StackPanel>
                                        <Image Source="/Images/MainWinImg/icon_user.png"
                                               Name="iconUser"
                                               Style="{DynamicResource imgListMenu}" />
                                        <TextBlock Text="Card Holder"
                                                   Tag="Language"
                                                   Name="txtUser" />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Cursor="Hand"
                                              Height="55"
                                              x:Name="lisDoorControl">
                                    <StackPanel>
                                        <Image Source="/Images/MainWinImg/icon_portfolio.png"
                                               Name="iconTools"
                                               Style="{DynamicResource imgListMenu}" />
                                        <TextBlock Text="Manual Control"
                                                   Tag="Language"
                                                   Name="txtTools" />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Cursor="Hand"
                                              Height="55"
                                              x:Name="lisMustering">
                                    <StackPanel>
                                        <Image Source="/Images/MainWinImg/icon_portfolio.png"
                                               Name="iconMustering"
                                               Style="{DynamicResource imgListMenu}" />
                                        <TextBlock Text="e-Mustering"
                                                   Tag="Language"
                                                   Name="txtMustring" />
                                    </StackPanel>
                                </ListViewItem>                               
                                <ListViewItem Cursor="Hand"
                                              Height="55"
                                              x:Name="lisReport">
                                    <StackPanel>
                                        <Image Source="/Images/MainWinImg/icon_reports.png"
                                               x:Name="iconReport"
                                               Style="{DynamicResource imgListMenu}" />
                                        <TextBlock Text="Reports"
                                                   Tag="Language"
                                                   Name="txtReport" />
                                    </StackPanel>
                                </ListViewItem>                              
                                <ListViewItem Height="55"
                                              Cursor="Hand">
                                    <StackPanel>
                                        <Image Source="/Images/MainWinImg/icon_about.png"
                                               Name="iconAbout"
                                               Style="{DynamicResource imgListMenu}" />
                                        <TextBlock Text="About"
                                                   Tag="Language"
                                                   Name="txtAbout" />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Cursor="Hand"
                                              Height="55"
                                              x:Name="lisLogout">
                                    <StackPanel>
                                        <Image Source="/Images/MainWinImg/icon_logout.png"
                                               Name="iconLogout"
                                               Style="{DynamicResource imgListMenu}" />
                                        <TextBlock Text="Logout"
                                                   Tag="Language"
                                                   Name="txtLogout" />
                                    </StackPanel>
                                </ListViewItem>
                            </ListView>
                        </StackPanel>
                       
                    </Grid>
                </Border>

                <Grid Grid.Column="1"
                      Grid.Row="1"
                      x:Name="GridMainContent">
                    <ScrollViewer Name="Main_scroll">
                        <ScrollViewer.Resources>
                            <Style x:Key="ScrollThumbs"
                                   TargetType="{x:Type Thumb}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                            <Grid x:Name="Grid">
                                                <Border x:Name="ScrollBarRectangle"
                                                        CornerRadius="5"
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Stretch"
                                                        Width="Auto"
                                                        Height="Auto"
                                                        Background="#FF646464" />
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Tag"
                                                         Value="Horizontal">
                                                    <Setter TargetName="ScrollBarRectangle"
                                                            Property="Width"
                                                            Value="Auto" />
                                                    <Setter TargetName="ScrollBarRectangle"
                                                            Property="Height"
                                                            Value="7" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style TargetType="{x:Type ScrollBar}">
                                <Setter Property="Margin"
                                        Value="0" />
                                <Setter Property="Stylus.IsFlicksEnabled"
                                        Value="false" />
                                <Setter Property="Foreground"
                                        Value="#959393" />
                                <Setter Property="Background"
                                        Value="Gainsboro" />
                                <Setter Property="Width"
                                        Value="8" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                                            <Grid x:Name="GridRoot"
                                                  Width="8"
                                                  Background="{TemplateBinding Background}">
                                                <Track x:Name="PART_Track"
                                                       IsDirectionReversed="true"
                                                       Focusable="false">
                                                    <Track.Thumb>
                                                        <Thumb x:Name="ScrollBarThumb"
                                                               Background="{TemplateBinding Foreground}"
                                                               Style="{StaticResource ScrollThumbs}" />
                                                    </Track.Thumb>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton x:Name="PageUp"
                                                                      Command="ScrollBar.PageDownCommand"
                                                                      Opacity="0"
                                                                      Focusable="false" />
                                                    </Track.IncreaseRepeatButton>
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton x:Name="PageDown"
                                                                      Command="ScrollBar.PageUpCommand"
                                                                      Opacity="0"
                                                                      Focusable="false" />
                                                    </Track.DecreaseRepeatButton>
                                                </Track>
                                            </Grid>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled"
                                                         Value="false">
                                                    <Setter TargetName="ScrollBarThumb"
                                                            Property="Visibility"
                                                            Value="Collapsed" />
                                                </Trigger>
                                                <Trigger Property="Orientation"
                                                         Value="Horizontal">
                                                    <Setter TargetName="GridRoot"
                                                            Property="LayoutTransform">
                                                        <Setter.Value>
                                                            <RotateTransform Angle="-90" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter TargetName="PART_Track"
                                                            Property="LayoutTransform">
                                                        <Setter.Value>
                                                            <RotateTransform Angle="-90" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Width"
                                                            Value="Auto" />
                                                    <Setter Property="Height"
                                                            Value="8" />
                                                    <Setter TargetName="ScrollBarThumb"
                                                            Property="Tag"
                                                            Value="Horizontal" />
                                                    <Setter TargetName="PageDown"
                                                            Property="Command"
                                                            Value="ScrollBar.PageLeftCommand" />
                                                    <Setter TargetName="PageUp"
                                                            Property="Command"
                                                            Value="ScrollBar.PageRightCommand" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ScrollViewer.Resources>

                        <DockPanel  x:Name="ContentArea"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Stretch"
                                    Margin="15,15,15,5">
                        </DockPanel>
                    </ScrollViewer>

                    <!--<Alert:UC_AlertMsgBox x:Name="AlertMsgBox" />-->
                </Grid>

                <Border Grid.Column="1"
                        Grid.Row="2"
                        Background="White">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFAEAEAE"
                                          Direction="40"
                                          BlurRadius="7"
                                          ShadowDepth="5"
                                          Opacity="0.6" />
                    </Border.Effect>
                    
                </Border>
            </Grid>
        </Border>
        <Grid Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


