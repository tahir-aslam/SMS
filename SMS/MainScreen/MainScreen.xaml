<Window x:Class="SMS.MainScreen.MainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:ctr="clr-namespace:SMS.Controls"
        xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic"
        Title="Scenario Management Solution. 0300-4197674"
        Height="800"
        Width="1000"
        WindowState="Maximized"
        Icon="/SMS;component/SMS.ico"
        Activated="MetroWindow_Activated"
        Deactivated="MetroWindow_Deactivated"
        Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="/SMS;component/images/23_demo_image.jpg" />
    </Window.Background>
    <Window.Resources>
        <SolidColorBrush x:Key="OutlookButtonForeground"
                         Color="Black" />

        <LinearGradientBrush x:Key="OutlookButtonBackground"
                             EndPoint="0.5,1"
                             StartPoint="0.5,0">
            <GradientStop Color="White"
                          Offset="1.9" />

            <GradientStop Color="White"
                          Offset="0.2" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="OutlookButtonHighlight"
                             EndPoint="0,1"
                             StartPoint="0,0">
            <GradientStop Color="White"
                          Offset="0.3" />
            <GradientStop Color="Purple"
                          Offset="0.1" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="frame_background"
                             EndPoint="0.8,1"
                             StartPoint="0.2,0">
            <GradientStop Color="White"
                          Offset="0.7" />

            <GradientStop Color="White"
                          Offset="0.2" />


        </LinearGradientBrush>

        <Style x:Key="OutlookTabControlStyle"
               TargetType="{x:Type TabControl}">
            <Setter Property="Foreground"
                    Value="{DynamicResource OutlookButtonForeground}" />
            <Setter Property="Background"
                    Value="{DynamicResource OutlookButtonBackground}" />
            <Setter Property="BorderBrush"
                    Value="{x:Static Microsoft_Windows_Themes:ClassicBorderDecorator.ClassicBorderBrush}" />
            <Setter Property="BorderThickness"
                    Value="3" />
            <Setter Property="Margin"
                    Value="0" />
            <Setter Property="Padding"
                    Value="1" />
            <Setter Property="MinWidth"
                    Value="10" />
            <Setter Property="MinHeight"
                    Value="10" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid ClipToBounds="true"
                              SnapsToDevicePixels="true"
                              KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="RowDefinition0"
                                               Height="Auto" />
                                <RowDefinition x:Name="RowDefinition1"
                                               Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="ColumnDefinition0" />
                                <ColumnDefinition x:Name="ColumnDefinition1"
                                                  Width="0" />
                            </Grid.ColumnDefinitions>
                            <Grid x:Name="ContentPanel"
                                  Grid.Column="0"
                                  Grid.Row="1"
                                  KeyboardNavigation.DirectionalNavigation="Contained"
                                  KeyboardNavigation.TabIndex="2"
                                  KeyboardNavigation.TabNavigation="Local">
                                <Microsoft_Windows_Themes:ClassicBorderDecorator Background="{TemplateBinding Background}"
                                                                                 BorderBrush="{TemplateBinding BorderBrush}"
                                                                                 BorderStyle="Raised"
                                                                                 BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                      Margin="2,2,2,2"
                                                      x:Name="PART_SelectedContentHost"
                                                      ContentSource="SelectedContent" />
                                </Microsoft_Windows_Themes:ClassicBorderDecorator>
                            </Grid>
                            <StackPanel HorizontalAlignment="Stretch"
                                        Margin="0,-2,0,0"
                                        x:Name="HeaderPanel"
                                        VerticalAlignment="Bottom"
                                        Width="Auto"
                                        Height="Auto"
                                        Grid.Row="1"
                                        IsItemsHost="True" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="TabStripPlacement"
                                     Value="Bottom">
                                <Setter Property="Grid.Row"
                                        TargetName="ContentPanel"
                                        Value="0" />
                                <Setter Property="Height"
                                        TargetName="RowDefinition0"
                                        Value="*" />
                                <Setter Property="Height"
                                        TargetName="RowDefinition1"
                                        Value="Auto" />
                            </Trigger>
                            <Trigger Property="TabStripPlacement"
                                     Value="Left">
                                <Setter Property="Grid.Row"
                                        TargetName="ContentPanel"
                                        Value="0" />
                                <Setter Property="Grid.Column"
                                        TargetName="ContentPanel"
                                        Value="1" />
                                <Setter Property="Width"
                                        TargetName="ColumnDefinition0"
                                        Value="Auto" />
                                <Setter Property="Width"
                                        TargetName="ColumnDefinition1"
                                        Value="*" />
                                <Setter Property="Height"
                                        TargetName="RowDefinition0"
                                        Value="*" />
                                <Setter Property="Height"
                                        TargetName="RowDefinition1"
                                        Value="0" />
                            </Trigger>
                            <Trigger Property="TabStripPlacement"
                                     Value="Right">
                                <Setter Property="Grid.Row"
                                        TargetName="ContentPanel"
                                        Value="0" />
                                <Setter Property="Grid.Column"
                                        TargetName="ContentPanel"
                                        Value="0" />
                                <Setter Property="Width"
                                        TargetName="ColumnDefinition0"
                                        Value="*" />
                                <Setter Property="Width"
                                        TargetName="ColumnDefinition1"
                                        Value="Auto" />
                                <Setter Property="Height"
                                        TargetName="RowDefinition0"
                                        Value="*" />
                                <Setter Property="Height"
                                        TargetName="RowDefinition1"
                                        Value="0" />
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="false">
                                <Setter Property="Foreground"
                                        Value="{DynamicResource
                            {x:Static SystemColors.GrayTextBrushKey}}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutlookTabItemStyle"
               TargetType="{x:Type TabItem}">
            <Setter Property="Padding"
                    Value="12,2,12,2" />
            <Setter Property="Foreground"
                    Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="Background"
                    Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
            <Setter Property="VerticalContentAlignment"
                    Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border SnapsToDevicePixels="true"
                                x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderThickness="1"
                                BorderBrush="#FF6593CF">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="{Binding Path=VerticalContentAlignment,
                RelativeSource={RelativeSource AncestorType=
                        {x:Type ItemsControl}}}"
                                              ContentSource="Header"
                                              RecognizesAccessKey="True"
                                              HorizontalAlignment="Left" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Selector.IsSelected"
                                     Value="True">
                                <Setter Property="Background"
                                        TargetName="Bd"
                                        Value="{DynamicResource OutlookButtonHighlight}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0"
              Background="Black"
              Grid.ColumnSpan="2"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90" />
                <ColumnDefinition Width="*" />               
                <ColumnDefinition Width="490" />
            </Grid.ColumnDefinitions>
            <Image Name="institute_logo_img"
                   HorizontalAlignment="Left"
                   Source="/SMS;component/images/sms.png"
                   Width="80"
                   Height="70"
                   Margin="0,1"
                   VerticalAlignment="Center" />
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                <Label Content="Scenario Management Solution"
                       Name="institute_name_lbl"
                       Foreground="Bisque"
                       HorizontalAlignment="Left"
                       FontSize="30"
                       FontFamily="Georgia"
                       MouseLeftButtonDown="institute_name_lbl_MouseLeftButtonDown" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Grid.Column="2" 
                        HorizontalAlignment="Right"
                        >
            <Button Grid.Column="2"
                    Name="home_btn"
                    ToolTipService.ToolTip="Sms"
                    Height="50"
                    Width="50"
                    x:FieldModifier="public"
                    Background="Black"
                    BorderBrush="Black"
                    Click="home_btn_Click">
                <Image  Source="/SMS;component/images/home.png" />
            </Button>
            <Button Grid.Column="3"
                    Name="smsSend"
                    ToolTipService.ToolTip="Sms"
                    Height="50"
                    Width="50"
                    Click="smsSend_Click"
                    x:FieldModifier="public"
                    Background="Black"
                    BorderBrush="Black"
                    Visibility="Collapsed">
                <Image  Source="/SMS;component/images/smsicon.png"
                        Name="img" />
            </Button>
            <Button Grid.Column="4"
                    Name="web_btn"
                    ToolTipService.ToolTip="Web Panel"
                    Height="50"
                    Width="50"
                    x:FieldModifier="public"
                    Background="Black"
                    BorderBrush="Black"
                    Click="web_btn_Click"
                    Visibility="Visible">
                <Image  Source="/SMS;component/images/web2.png"
                        Name="img_web" />
            </Button>
            <Button Grid.Column="5"
                    HorizontalAlignment="Left"
                    ToolTip="Upload Data To Online Database"
                    Name="data_uploader_btn"
                    Width="50"
                    Height="50"
                    Background="Black"
                    BorderBrush="Black"
                    Click="data_uploader_btn_Click"
                    Visibility="Visible">
                <Image Source="/SMS;component/images/upload1.png" />
            </Button>
            <Button Grid.Column="6"
                    HorizontalAlignment="Left"
                    ToolTip="Download Data From Online Database"
                    Width="50"
                    Height="50"
                    Background="Black"
                    BorderBrush="Black">
                <Image  Source="/SMS;component/images/download1.png" />
            </Button>
            <Button Grid.Column="7"
                    HorizontalAlignment="Left"
                    Name="setting_btn"
                    ToolTip="Scenario Admin Panel"
                    Width="50"
                    Height="50"
                    Background="Black"
                    BorderBrush="Black"
                    Click="setting_btn_Click">
                <Image  Source="/SMS;component/images/setting.png" />
            </Button>
            <Button Grid.Column="8"
                    HorizontalAlignment="Left"
                    ToolTip="Logout"
                    Width="50"
                    Height="50"
                    Background="Black"
                    BorderBrush="Black"
                    Name="logout_btn"
                    Click="logout_btn_Click">
                <Image  Source="/SMS;component/images/logout.png"
                        ImageFailed="Image_ImageFailed" />
            </Button>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="0"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <TextBlock Text="Session"
                       FontWeight="Bold"
                       FontSize="18"
                       Name="session_name_tb"
                       Foreground="Gray" />
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <ColumnDefinition Width="100" />

            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="Wednesday"
                       HorizontalAlignment="Left"
                       Name="day_textblock"
                       FontSize="19"
                       Foreground="LightGray"
                       FontFamily="Georgia" />
            <!--<TextBlock Grid.Column="2" Text="01 March " HorizontalAlignment="Right"  Name="date_textblock" FontSize="16" Foreground="Purple" FontWeight="Black"/>-->
            <TextBlock Grid.Column="1"
                       Text=" 01:25:55 "
                       HorizontalAlignment="Right"
                       Name="time_textblock"
                       FontSize="19"
                       Foreground="Brown"
                       FontFamily="Georgia" />
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="1"
              Grid.RowSpan="2">
            <Frame Name="mainFrame"
                   Margin="10,0,10,10"
                   NavigationUIVisibility="Hidden">
            </Frame>
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="1"
              Grid.RowSpan="2"
              VerticalAlignment="Bottom">
            <ctr:LoadingPanel x:Name="smsLoadingPanel"
                              IsLoading="{Binding PanelLoading}"
                              Message="{Binding PanelMainMessage}"
                              SubMessage="{Binding PanelSubMessage}"
                              ClosePanelCommand="{Binding PanelCloseCommand}" />
        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="0"
              Margin="10,0,10,10">
            <!--Tab Control-->
            <DockPanel>
                <TabControl   VerticalAlignment="Stretch"
                              Width="200"
                              Height="Auto"
                              DockPanel.Dock="Left"
                              TabStripPlacement="Bottom"
                              Style="{DynamicResource OutlookTabControlStyle}"
                              MaxWidth="300"
                              MinWidth="100"
                              BorderBrush="#FF6593CF"
                              HorizontalAlignment="Left"
                              BorderThickness="1,1,1,0"
                              >

                    <!--Class Management Tab-->

                    <TabItem   Header="Class Management"
                               Name="class_mgmt_tab"
                               Height="35"
                               Style="{DynamicResource OutlookTabItemStyle}"
                               Background="{DynamicResource OutlookButtonBackground}"
                               Foreground="{DynamicResource OutlookButtonForeground}"
                               FontSize="15"
                               FontFamily="Arial"
                               Visibility="Collapsed"
                               >
                        <StackPanel Width="190"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Vertical">
                            <Button Content="Classes"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="button1"
                                    Click="classMgmt_Click"
                                    Visibility="Collapsed"
                                    Grid.ColumnSpan="2"
                                    Margin="0,2" />
                            <Button Grid.Row="1"
                                    Content="Sections"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="section_button"
                                    Click="sectionMgmt_Click"
                                    Visibility="Collapsed"
                                    Grid.ColumnSpan="2"
                                    Margin="0,2" />
                            <Button Grid.Row="2"
                                    Content="Subjects"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="subject_button"
                                    Click="SubjectMgmt_Click"
                                    Visibility="Collapsed"
                                    Grid.ColumnSpan="2"
                                    Margin="0,2" />
                        </StackPanel>
                    </TabItem>

                    <!--Admission Management Tab-->

                    <TabItem Name="adm_mgmt_tab"
                             Header="Admission Management"
                             Height="35"
                             Style="{DynamicResource OutlookTabItemStyle}"
                             Background="{DynamicResource OutlookButtonBackground}"
                             Foreground="{DynamicResource OutlookButtonForeground}"
                             FontSize="15"
                             FontFamily="Arial"
                             Visibility="Collapsed">
                        <Grid Width="190"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Top">
                            <StackPanel Orientation="Vertical">
                                <Button Grid.Row="0"
                                        Content="Admission Register"
                                        Height="35"
                                        VerticalAlignment="Center"
                                        Name="Admission"
                                        Click="Admission_Click"
                                        Visibility="Collapsed"
                                       />
                                <Button Grid.Row="1"
                                        Content="Admission Register"
                                        Height="35"
                                        VerticalAlignment="Center"
                                        Name="Admission_new"
                                        Click="Admission_new_Click" 
                                        Visibility="Collapsed"/>
                                <Button Grid.Row="2"
                                        Content="Withdrawal Register"
                                        Height="35"
                                        VerticalAlignment="Center"
                                        Name="Admission_withdraw"
                                        Visibility="Collapsed"
                                        Click="Admission_withdraw_Click" />
                                <Button Grid.Row="3"
                                        Content="Bulk Fee Update"
                                        Height="35"
                                        VerticalAlignment="Center"
                                        Name="bulk_fee_update_btn"
                                        Visibility="Collapsed"
                                        Click="bulk_fee_update_btn_Click"
                                        />
                                <Button Grid.Row="4"
                                        Content="Promote Students"
                                        Height="35"
                                        VerticalAlignment="Center"
                                        Name="std_promote_btn"
                                        Visibility="Collapsed"
                                        Click="std_promote_btn_Click" />
                                <Button Grid.Row="5"
                                        Content="Fine Management"
                                        Height="35"
                                        VerticalAlignment="Center"
                                        Name="fine_btn"
                                        Visibility="Collapsed"
                                        Click="fine_btn_Click"
                                        />
                                <Button Grid.Row="6"
                                        Content="Envelopes"
                                        Height="35"
                                        VerticalAlignment="Center"
                                        Name="envelope_btn"                                        
                                        Click="envelope_btn_Click" 
                                        Visibility="Collapsed"/>
                                <Button Grid.Row="7"
                                        Content="Student List By Section"
                                        Height="35"
                                        VerticalAlignment="Center"
                                        Name="std_list_section"
                                        Click="std_list_section_Click"
                                        Visibility="Collapsed" />
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <!--Fee Management Tab-->

                    <TabItem Name="fee_mgmt_tab"
                             Visibility="Collapsed"
                             Header="Fee Management"
                             Height="35"
                             Style="{DynamicResource OutlookTabItemStyle}"
                             Background="{DynamicResource OutlookButtonBackground}"
                             Foreground="{DynamicResource OutlookButtonForeground}"
                             FontSize="15"
                             FontFamily="Arial"
                             >
                        <Grid Width="190"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0"
                                    Content="Fee Register"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="fee"
                                    Click="fee_Click"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="1"
                                    Content="Paid Fee Ledger "
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="paidfee_btn"
                                    Click="paidfee_btn_Click"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="2"
                                    Content="Fee Defaulters List"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="Defaulterfee_btn"
                                    Click="Defaulterfee_btn_Click"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="3"
                                    Content="Paid Fee Report"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="paidfeeReport_btn"
                                    Click="paidfeeReport_btn_Click"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="4"
                                    Content="Fee Vouchers"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="fee_vouchers_btn"
                                    Visibility="Collapsed"
                                    Click="fee_vouchers_btn_Click" />
                            <Button Grid.Row="5"
                                    Content="Pay Fee By Voucher"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="fee_vouchers_paid_btn"
                                    Visibility="Collapsed"
                                    Click="fee_vouchers_paid_btn_Click" />
                            <Button Grid.Row="6"
                                    Content="Pay Fee By Amount"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="fee_amount_paid_btn"
                                    Visibility="Collapsed"
                                    Click="fee_amount_paid_btn_Click" />

                        </Grid>
                    </TabItem>

                    <!--Feessssss Management Tab-->

                    <TabItem Name="fees_mgmt_tab"
                             Header="Fee Management"
                             Visibility="Collapsed"
                             Height="35"
                             Style="{DynamicResource OutlookTabItemStyle}"
                             Background="{DynamicResource OutlookButtonBackground}"
                             Foreground="{DynamicResource OutlookButtonForeground}"
                             FontSize="15"
                             FontFamily="Arial">
                        <StackPanel Width="190"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Vertical">

                            <Button Grid.Row="0"
                                    Content="Fee Generation"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    Name="ManageFeesBTN"
                                    Visibility="Collapsed"
                                    Click="ManageFees_Click" />
                            <Button Grid.Row="1"
                                    Content="Fee Register"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    Name="FeesCollectionBTN"
                                    Visibility="Collapsed"
                                    Click="FeesCollectionBTN_Click" />
                            <Button Grid.Row="2"
                                    Content="Fee Collection Ledger"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    Name="FeesCollectionReportBTN"
                                    Visibility="Collapsed"
                                    Click="FeesCollectionReportBTN_Click" />
                            <Button Grid.Row="3"
                                    Content="Fee Defaulters"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    Name="FeesDefaulterBTN"
                                    Visibility="Collapsed"
                                    Click="FeesDefaulterBTN_Click" />
                            <Button Grid.Row="4"
                                    Content="Fee Vouchers"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    Name="FeesVouchersBTN"
                                    Visibility="Collapsed"
                                    Click="FeesVouchersBTN_Click" />
                            <Button Grid.Row="5"
                                    Content="Fee Collection By Amount"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    Name="FeesByAmountBTN"
                                    Visibility="Collapsed"
                                    Click="FeesByAmountBTN_Click" />
                            <Button Grid.Row="6"
                                    Content="Fee Collection By Voucher"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    Name="FeesByVouchersBTN"
                                    Visibility="Collapsed"
                                    Click="FeesByVouchersBTN_Click" />
                            <Button Grid.Row="7"
                                    Content="Advance Fee Reports"
                                    Height="30"
                                    Click="sampleReportsBTN_Click"
                                    VerticalAlignment="Center"
                                    Name="sampleReportsBTN"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="7"
                                    Content="Bulk Fee Update"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    Name="bulkFeesButton"
                                    Click="bulkFeesButton_Click"
                                    Visibility="Collapsed" />
                        </StackPanel>
                    </TabItem>


                    <!--Employee Management Tab-->

                    <TabItem Name="emp_mgmt_tab"
                             Header="Employee Management"
                             Height="35"
                             Style="{DynamicResource OutlookTabItemStyle}"
                             Background="{DynamicResource OutlookButtonBackground}"
                             Foreground="{DynamicResource OutlookButtonForeground}"
                             FontSize="15"
                             FontFamily="Arial"
                             Visibility="Collapsed">
                        <StackPanel Width="190"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Orientation="Vertical">

                            <Button Grid.Row="0"
                                    Content="Employees"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="add_emp"
                                    Click="add_emp_Click"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="1"
                                    Content="Withdraw Employees"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="withdraw_emp"
                                    Visibility="Collapsed"
                                    Click="withdraw_emp_Click" />
                            <Button Grid.Row="2"
                                    Content="Employee Attendence"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="emp_attnd"
                                    Click="emp_attnd_Click"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="3"
                                    Content="Salary Sheet"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="emp_salary_sheet_btn"
                                    Click="emp_salary_sheet_btn_Click" 
                                    Visibility="Collapsed"/>
                            <Button Grid.Row="4"
                                    Content="Employee Payments"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="emp_payment"
                                    Click="emp_payment_Click"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="5"
                                    Content="Employee Login"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="emp_login"
                                    Click="emp_login_Click"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="6"
                                    Content="Employee Roles"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="emp_roles_btn"
                                    Click="emp_roles_btn_Click"
                                    Visibility="Collapsed" />
                            <Button Grid.Row="7"
                                    Content="Unit Testing"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    Name="unit_test_btn"
                                    Visibility="Collapsed"
                                    Click="unit_test_btn_Click"                                    />
                        </StackPanel>
                    </TabItem>

                    <!--Student Management Tab-->

                    <TabItem Name="student_mgmt_tab"
                             Header="Student Management"
                             Height="35"
                             Style="{DynamicResource OutlookTabItemStyle}"
                             Background="{DynamicResource OutlookButtonBackground}"
                             Foreground="{DynamicResource OutlookButtonForeground}"
                             FontSize="15"
                             FontFamily="Arial"
                             Visibility="Collapsed">
                        <StackPanel Width="190"
