                                   Margin="5"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Stretch"
                                    Margin="0"
                                    Grid.Column="1">

                            <StackPanel Orientation="Horizontal"
                                        x:Name="pnlShowUsers"
                                        Visibility="Collapsed">
                                <!--<TextBlock Name="txtOperatorName"
                                           Text="{Binding Path=(optName)}"
                                           FontFamily="Open Sans Reguler"
                                           Cursor="Hand"
                                           FontSize="12"
                                           Margin="5"
                                           VerticalAlignment="Center"></TextBlock>-->
                                <materialDesign:PackIcon x:Name="icoUser"
                                                         Cursor="Hand"
                                                         Kind="User"
                                                         VerticalAlignment="Center"
                                                         Width="25"
                                                         Height="25"
                                                         Margin="10,0"
                                                         Foreground="#FF969696" />
                                <Separator Width="2"
                                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                          


                            <!--<Separator Width="2"
                                       Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />-->

                            <Image x:Name="icoAlarm"
                                   
                                   Cursor="Hand"
                                   Width="20"
                                   Height="20"
                                   VerticalAlignment="Center"
                                   Margin="10,0"
                                   HorizontalAlignment="Center"
                                   Source="/images/MainWinImg/alarmofficon.png" />





                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,5,0">
                                <Separator Width="2"
                                           Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>
                            <Button x:Name="btnSetting"
                                    Background="Transparent"
